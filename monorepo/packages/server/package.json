{
  "name": "@firebase-monorepo/server",
  "version": "0.0.0",
  "description": "> TODO: description",
  "author": "Kakeru Ishii <i.kakeru@grimoire.gl>",
  "homepage": "",
  "license": "ISC",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": ["lib"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "webpack && npm run build:copy_entry",
    "build:copy_entry": "cp ./src/*.* ./dist",
    "lint:format":
      "prettier --write --config ../../.prettierrc.json './src/**/*.{js,ts,tsx,scss,json}'",
    "lint":
      "prettier --list-different --config ../../.prettierrc.json './src/**/*.{js,ts,tsx,scss,json}'"
  },
  "dependencies": {
    "@firebase-monorepo/api-schema": "^0.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "codecov": "^3.1.0",
    "cpx": "^1.5.0",
    "express": "^4.16.4",
    "firebase-admin": "^6.2.0",
    "firebase-functions": "^2.1.0",
    "ts-jest": "^23.10.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "babel-loader": "^8.0.4",
    "coveralls": "^3.0.2",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.5",
    "ts-jest-babel-7": "^22.0.7",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "lint-staged": {
    "./src/**/*.{js,ts,tsx,scss,json}": ["npm run lint:format", "git add"]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest-babel-7"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  }
}
